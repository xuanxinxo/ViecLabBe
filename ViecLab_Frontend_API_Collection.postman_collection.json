{
  "info": {
    "name": "ViecLab Frontend API Collection",
    "description": "API collection for Frontend team integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://your-deployed-api.com/api",
      "description": "Replace with your actual deployed API URL"
    },
    {
      "key": "accessToken",
      "value": "",
      "description": "Will be set automatically after login"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "User Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/register",
              "host": ["{{baseUrl}}"],
              "path": ["users", "register"]
            }
          }
        },
        {
          "name": "User Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success) {",
                  "        pm.collectionVariables.set('accessToken', response.data.accessToken);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/login",
              "host": ["{{baseUrl}}"],
              "path": ["users", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["users", "me"]
            }
          }
        },
        {
          "name": "Admin Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success) {",
                  "        pm.collectionVariables.set('accessToken', response.data.accessToken);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/login",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Jobs",
      "item": [
        {
          "name": "Get All Jobs",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/jobs",
              "host": ["{{baseUrl}}"],
              "path": ["jobs"]
            }
          }
        },
        {
          "name": "Get Jobs with Filters",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/jobs?status=active&type=Full-time&location=Ho Chi Minh&isRemote=true",
              "host": ["{{baseUrl}}"],
              "path": ["jobs"],
              "query": [
                {
                  "key": "status",
                  "value": "active"
                },
                {
                  "key": "type",
                  "value": "Full-time"
                },
                {
                  "key": "location",
                  "value": "Ho Chi Minh"
                },
                {
                  "key": "isRemote",
                  "value": "true"
                }
              ]
            }
          }
        },
        {
          "name": "Get Job by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/jobs/:id",
              "host": ["{{baseUrl}}"],
              "path": ["jobs", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "job-id-here"
                }
              ]
            }
          }
        },
        {
          "name": "Create Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Frontend Developer\",\n  \"company\": \"Tech Company\",\n  \"location\": \"Ho Chi Minh City\",\n  \"type\": \"Full-time\",\n  \"salary\": \"15-20M VND\",\n  \"description\": \"We are looking for a skilled Frontend Developer...\",\n  \"requirements\": [\n    \"2+ years experience with React\",\n    \"Knowledge of TypeScript\",\n    \"Experience with modern CSS frameworks\"\n  ],\n  \"benefits\": [\n    \"Competitive salary\",\n    \"Health insurance\",\n    \"Remote work options\"\n  ],\n  \"deadline\": \"2024-12-31\",\n  \"isRemote\": false,\n  \"tags\": [\"react\", \"typescript\", \"frontend\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/jobs",
              "host": ["{{baseUrl}}"],
              "path": ["jobs"]
            }
          }
        },
        {
          "name": "Update Job",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Senior Frontend Developer\",\n  \"salary\": \"20-25M VND\",\n  \"isRemote\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/jobs/:id",
              "host": ["{{baseUrl}}"],
              "path": ["jobs", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "job-id-here"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Job",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/jobs/:id",
              "host": ["{{baseUrl}}"],
              "path": ["jobs", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "job-id-here"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Applications",
      "item": [
        {
          "name": "Submit Application",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"phone\": \"0123456789\",\n  \"message\": \"I am very interested in this position...\",\n  \"cv\": \"cv-file-url\",\n  \"jobId\": \"job-id-here\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/applications",
              "host": ["{{baseUrl}}"],
              "path": ["applications"]
            }
          }
        },
        {
          "name": "Get All Applications",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/applications",
              "host": ["{{baseUrl}}"],
              "path": ["applications"]
            }
          }
        },
        {
          "name": "Get My Applications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/applications/my-applications",
              "host": ["{{baseUrl}}"],
              "path": ["applications", "my-applications"]
            }
          }
        },
        {
          "name": "Get Application by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/applications/:id",
              "host": ["{{baseUrl}}"],
              "path": ["applications", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "application-id-here"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "News & Content",
      "item": [
        {
          "name": "Get All News",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/news",
              "host": ["{{baseUrl}}"],
              "path": ["news"]
            }
          }
        },
        {
          "name": "Get News by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/news/:id",
              "host": ["{{baseUrl}}"],
              "path": ["news", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "news-id-here"
                }
              ]
            }
          }
        },
        {
          "name": "Get All Hirings",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/hirings",
              "host": ["{{baseUrl}}"],
              "path": ["hirings"]
            }
          }
        },
        {
          "name": "Get New Jobs",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/newjobs",
              "host": ["{{baseUrl}}"],
              "path": ["newjobs"]
            }
          }
        }
      ]
    },
    {
      "name": "System",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/../health",
              "host": ["{{baseUrl}}"],
              "path": ["..", "health"]
            }
          }
        },
        {
          "name": "API Status",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/..",
              "host": ["{{baseUrl}}"],
              "path": [".."]
            }
          }
        }
      ]
    }
  ]
}
